<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snehpandya.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AttractionsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/attractions"/>
        <activity
            android:name=".CitiesActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/cities"/>
        <activity
            android:name=".HillStationsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/hillstations"/>
        <activity
            android:name=".HotelsActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/hotels"/>
    </application>

</manifest>